<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mymewsic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecentlyPlayedActivity"
            android:label="@string/recently_played" />
        <activity android:name=".AlbumsActivity"
        android:label="@string/albums" />
        <activity android:name=".ArtistsActivity"
            android:label="@string/artists" />
        <activity android:name=".PaymentActivity"
            android:label="@string/payment" />
        <activity android:name=".CurrentActivity"
            android:label="@string/cur" />
        <activity android:name=".LibraryActivity"
            android:label="@string/library" />
    </application>

</manifest>